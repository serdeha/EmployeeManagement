@model EmployeeManagement.Common.ViewModels.EmployeeLeaveTypeVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form class="form-horizontal" style="margin-top: 10px" role="form" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" asp-for="Name"> İzin Tipi </label>

        <div class="col-sm-9">
            <input asp-for="Name" type="text" id="form-field-1" placeholder="Tatil Sebep Tipi" class="col-xs-10 col-sm-5" />
            <span asp-validation-for="Name"></span>
        </div>
    </div>
    
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" asp-for="DefaultDays"> Sabit Gün Sayısı</label>

        <div class="col-sm-9">
            <input asp-for="DefaultDays" type="number" min="0" max="15" id="form-field-1" placeholder="Gün Sayısı" class="col-xs-10 col-sm-5" />
            @*<span asp-validation-for="DefaultDays"></span>*@
        </div>
    </div>

    <div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">
            @*<button class="btn btn-info" type="button">
                    <i class="ace-icon fa fa-check bigger-50"></i>
                    Submit
                </button>
            *@
            <input type="submit" class="btn btn-info" value="Oluştur"/>
        </div>
    </div>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}