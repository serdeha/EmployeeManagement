@model EmployeeManagement.Common.ViewModels.EmployeeLeaveTypeVM
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="form-horizontal" style="margin-top: 10px" role="form" asp-action="Edit">
    @Html.HiddenFor(x=>x.ID)

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" asp-for="Name"> İzin Tipi </label>

        <div class="col-sm-9">
            <input asp-for="Name" type="text" id="form-field-1" placeholder="İzin Tipi" class="col-xs-10 col-sm-5"/>
            <span asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">
            <input type="submit" class="btn btn-info" value="Düzenle"/>
        </div>
    </div>
</form>


